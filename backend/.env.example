# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/deso-messenger

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this
JWT_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3000

# DeSo Configuration
DESO_NODE_URL=https://node.deso.org

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
MESSAGE_RATE_LIMIT_WINDOW_MS=60000
MESSAGE_RATE_LIMIT_MAX=30

# Logging
LOG_LEVEL=info

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true

# WebSocket Configuration
SOCKET_IO_ORIGINS=http://localhost:3000

# File Upload (if implemented)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Message Cleanup
MESSAGE_CLEANUP_INTERVAL_MINUTES=5

# Development Settings (remove in production)
ENABLE_DEBUG_LOGGING=true
